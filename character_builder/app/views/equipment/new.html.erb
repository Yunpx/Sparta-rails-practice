<h1>Add new Equipment</h1>

<%= form_for @equipment, :url => {:controller => "equipment", :action => "create"} do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :durability  %><br>
    <%= form.text_field :durability %>
  </p>

  <p>
    <%= form.label :type  %><br>
    <%= form.text_field :type %>
  </p>

  <p>
    <%= form.label :character_id  %><br>
    <%= form.number_field :character_id %>
  </p>



  <p>
    <%= form.submit %>
  </p>
<% end %>
