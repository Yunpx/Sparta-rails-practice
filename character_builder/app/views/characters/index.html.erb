<h1><%= current_user.name%>'s characters</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Class</th>
    <th>Level</th>
    <th>Gender</th>

    <th></th>
  </tr>

  <% @characters.each do |character| %>
  <% if character.user_id == current_user.id %>
    <tr>
      <td><%= character.name %></td>
      <td><%= character.class_type %></td>
      <td><%= character.level %></td>
      <td><%= character.gender %></td>

      <td><%= link_to 'Show', character_path(character) %></td>
      <td><%= link_to 'Edit', edit_character_path(character) %></td>
      <td><%= link_to 'Destroy', character_path(character),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  <% end %>
</table>
